{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Dev Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:.*?(https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 1
      }
    },
    {
      "name": "üèóÔ∏è Build & Start",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["start"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "production"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "npm: build",
      "serverReadyAction": {
        "pattern": "Local:.*?(https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "presentation": {
        "hidden": false,
        "group": "production",
        "order": 2
      }
    },
    {
      "name": "üîç Debug Next.js",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--inspect"
      },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:.*?(https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 3
      }
    },
    {
      "name": "üß™ Run Tests (if configured)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--watchAll"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 4
      }
    }
  ]
}